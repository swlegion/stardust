{
  "$id": "https://schema.swlegion.dev/model.json",
  "$schema": "http://json-schema.org/draft-07/schema",

  "title": "Unit",
  "type": "object",

  "additionalProperties": false,

  "properties": {
    "render": {
      "type": "string",
      "pattern": "\\.(obj|unity3d)$",
      "description": "A relative URL to either a .obj or .unity3d file."
    },
    "texture": {
      "type": "string",
      "anyOf": [
        {
          "type": "string",
          "pattern": "\\.(png|jpg)$"
        },
        {
          "type": "object",
          "properties": {
            "red": {
              "type": "string",
              "pattern": "\\.(png|jpg)$"
            },
            "blue": {
              "type": "string",
              "pattern": "\\.(png|jpg)$"
            }
          },
          "required": ["red", "blue"]
        }
      ]
    }
  }
}
