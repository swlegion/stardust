{
  "$id": "https://schema.swlegion.dev/model.json",
  "$schema": "http://json-schema.org/draft-07/schema",

  "title": "Unit",
  "type": "object",

  "additionalProperties": false,

  "definitions": {
    "image": {
      "type": "string",
      "pattern": "(.*?)\\.(png|jpg)$",
      "format": "uri-reference"
    }
  },

  "properties": {
    "render": {
      "type": "string",
      "pattern": "(.*?)\\.(obj|unity3d)$",
      "description": "A relative URL to either a .obj or .unity3d file.",
      "format": "uri-reference"
    },
    "texture": {
      "type": "string",
      "anyOf": [
        {
          "$ref": "#/definitions/image"
        },
        {
          "type": "object",
          "properties": {
            "red": {
              "$ref": "#/definitions/image"
            },
            "blue": {
              "$ref": "#/definitions/image"
            }
          },
          "required": ["red", "blue"]
        }
      ]
    }
  },

  "required": ["render", "texture"]
}
