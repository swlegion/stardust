{
  "$id": "https://schema.swlegion.dev/unit.json",
  "$schema": "http://json-schema.org/draft-07/schema",

  "title": "Unit",
  "type": "object",

  "additionalProperties": false,

  "properties": {
    "card": {
      "description": "A relative URI to the card image.",
      "type": "string",
      "pattern": "(.*?)\\.(png|jpg)$",
      "format": "uri-reference"
    },
    "faction": {
      "description": "Which faction does this unit belongs to.",
      "type": "string",
      "enum": [
        "Galactic Empire",
        "Galactic Republic",
        "Rebel Alliance",
        "Separatist Alliance"
      ]
    },
    "name": {
      "description": "The unit's full name as printed on the card.",
      "type": "string"
    },
    "rank": {
      "description": "Rank of the unit used for list building and orders.",
      "type": "string",
      "enum": [
        "Commander",
        "Operative",
        "Counterpart",
        "Corps",
        "Special Forces",
        "Support",
        "Heavy"
      ]
    },
    "speed": {
      "description": "Maximum speed of the unit.",
      "type": "integer",
      "enum": [0, 1, 2, 3],
      "default": 2
    },
    "size": {
      "description": "Size of the base (collider)",
      "type": "string",
      "oneOf": [
        {
          "const": "Small",
          "description": "Most standard troopers."
        },
        {
          "const": "Medium",
          "description": "Tauntauns, Droidekas, Speeder Bikes, and Mortars are this size."
        },
        {
          "const": "Large",
          "description": "AT-RTs and E-Webs are this size."
        },
        {
          "const": "Huge",
          "description": "Landspeeders and the AT-ST are this size."
        },
        {
          "const": "Oblong",
          "description": "Occupier Tank is this size."
        },
        {
          "const": "Massive",
          "description": "AAT and Saber Tank is this size."
        }
      ],
      "default": "small"
    },
    "title": {
      "description": "Title of the unit card, if any.",
      "type": "string"
    },
    "models": {
      "description": "Model information for this unit. Optional.",
      "type": "array",
      "items": { "$ref": "./model.json" },
      "default": []
    }
  },

  "required": ["card", "faction", "name", "rank", "size", "speed"]
}
